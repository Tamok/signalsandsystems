---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

// In a real application, this data would come from a content collection or API
const series = [
  {
    title: "Devlog Series",
    slug: "devlog",
    description: "A behind-the-scenes look at building the Signals & Systems platform, including technical decisions, challenges, and ethical considerations around vibecoding.",
    articleCount: 1,
    startDate: new Date('2025-05-21')
  }
  // Future series will be added here
];
---

<BaseLayout 
  title="Series | Signals & Systems"
  description="Browse all article series published on Signals & Systems."
>
  <Nav slot="header" />
  
  <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Series</h1>
        <p class="text-xl text-gray-600">
          Collections of related articles exploring topics in depth.
        </p>
      </header>
      
      <div class="space-y-10">
        {series.map((s) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
              <h2 class="text-2xl font-bold mb-2">
                <a href={`/series/${s.slug}`} class="text-gray-900 hover:text-blue-600">
                  {s.title}
                </a>
              </h2>
              <p class="text-gray-600 mb-4">{s.description}</p>
              <div class="flex items-center justify-between">
                <div class="text-sm text-gray-500">
                  <span>{s.articleCount} {s.articleCount === 1 ? 'Article' : 'Articles'}</span>
                  <span class="mx-2">•</span>
                  <span>Started {s.startDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long' 
                  })}</span>
                </div>
                <a href={`/series/${s.slug}`} class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                  View series →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
  
  <Footer slot="footer" />
</BaseLayout>
