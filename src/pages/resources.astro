---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import GlobalCitationListNew from "../components/ui/GlobalCitationListNew.astro";
---

<BaseLayout title="Global References | Signals & Systems">
  <Nav slot="header" />
  <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold mb-4">Global References</h1>
        <p class="text-gray-600 mb-8">
          A complete, deduplicated list of all resources cited across the Signals & Systems platform.
          Click any citation to see where it's used.
        </p>
      </header>
      
      <GlobalCitationListNew />
    </div>
  </div>
</BaseLayout>
