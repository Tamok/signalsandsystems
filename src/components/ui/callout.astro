---
interface Props {
  type?: 'info' | 'warning' | 'error' | 'tip' | 'insight';
  title?: string;
}

const { 
  type = 'info',
  title 
} = Astro.props;

// Map insight type to info for CalloutBox compatibility
const calloutType = type === 'insight' ? 'info' : type;

// Set colors based on type
const bgColor = {
  info: "bg-blue-50",
  warning: "bg-yellow-50",
  error: "bg-red-50",
  tip: "bg-green-50",
  insight: "bg-purple-50"
}[type];

const borderColor = {
  info: "border-blue-400",
  warning: "border-yellow-400",
  error: "border-red-400",
  tip: "border-green-400",
  insight: "border-purple-400"
}[type];

const textColor = {
  info: "text-blue-700",
  warning: "text-yellow-700",
  error: "text-red-700",
  tip: "text-green-700",
  insight: "text-purple-700"
}[type];

const iconPath = {
  info: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  warning: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 15.5c-.77.833.192 2.5 1.732 2.5z",
  error: "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z",
  tip: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
  insight: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
}[type];
---

<div class={`p-4 border-l-4 ${bgColor} ${borderColor} ${textColor} rounded-r-lg mb-6`}>
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <svg class="w-5 h-5 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath}></path>
      </svg>
    </div>
    <div class="ml-3 flex-1">
      {title && (
        <h4 class="text-sm font-medium mb-2">{title}</h4>
      )}
      <div class="text-sm">
        <slot />
      </div>
    </div>
  </div>
</div>
